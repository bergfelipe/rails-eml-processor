<!DOCTYPE html>
<html>
   <head>
   <title>RailsEmlProcessor</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>
  </head>

  <body class="bg-light">

    <!-- ðŸ”¥ NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark px-3" style="background:#0d1b2a;">
      <div class="container-fluid">
    
        <a class="navbar-brand d-flex align-items-center" href="<%= root_path %>">
          <i class="fa-solid fa-envelope-open-text me-2"></i>
          Processador EML
        </a>
    
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
          <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="mainNavbar">
          <ul class="navbar-nav ms-auto">

            <!-- Clientes -->
            <li class="nav-item">
              <%= link_to clientes_path, class: "nav-link" do %>
                <button class="btn btn-sm d-flex align-items-center <%= 'btn-light text-dark' if current_page?(clientes_path) %> <%= 'btn-outline-light' unless current_page?(clientes_path) %>">
                  <i class="fa-solid fa-users me-2"></i> Clientes
                </button>
              <% end %>
            </li>
          
            <!-- Processamentos -->
            <li class="nav-item">
              <%= link_to logs_processamentos_path, class: "nav-link" do %>
                <button class="btn btn-sm d-flex align-items-center <%= 'btn-light text-dark' if current_page?(logs_processamentos_path) %> <%= 'btn-outline-light' unless current_page?(logs_processamentos_path) %>">
                  <i class="fa-solid fa-clock-rotate-left me-2"></i> Processamentos
                </button>
              <% end %>
            </li>
          
            <!-- Arquivos (index) -->
            <li class="nav-item">
              <%= link_to arquivos_emails_path, class: "nav-link" do %>
                <button class="btn btn-sm d-flex align-items-center <%= 'btn-light text-dark' if current_page?(arquivos_emails_path) %> <%= 'btn-outline-light' unless current_page?(arquivos_emails_path) %>">
                  <i class="fa-solid fa-file me-2"></i> Arquivos
                </button>
              <% end %>
            </li>
          
          </ul>
          
        </div>
    
      </div>
    </nav>
    


    <div class="container mb-5">
      <%= yield %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  </body>
</html>
