<br>
<div class="card shadow-sm p-3" style="border-radius: 16px;">
  <h4 class="mb-3 d-flex align-items-center" style="font-weight: 600;">
    <i class="fa-solid fa-clock-rotate-left me-2 text-primary"></i>
    Histórico de Processamentos
  </h4>

  <table class="table table-hover align-middle" style="border-radius: 14px; overflow:hidden;">
    <thead class="table-light">
      <tr>
        <th><i class="fa-solid fa-hashtag"></i> ID</th>
        <th><i class="fa-solid fa-signal"></i> Status</th>
        <th><i class="fa-solid fa-message"></i> Mensagem</th>
        <th><i class="fa-solid fa-box"></i> Produto</th>
        <th><i class="fa-solid fa-envelope"></i> Remetente</th>
        <th><i class="fa-regular fa-clock"></i> Criado em</th>
        <th class="text-end"></th>
      </tr>
    </thead>

    <tbody>
      <% if @logs.blank? %>
        <tr>
          <td colspan="7" class="text-center text-muted py-4">
            <i class="fa-regular fa-folder-open fa-lg mb-2"></i><br>
            Nenhum processamento encontrado.
          </td>
        </tr>
      <% else %>
        <% @logs.each do |log| %>
          <tr>
            <!-- ID -->
            <td class="fw-semibold"><%= log.id %></td>

            <!-- STATUS -->
            <td>
              <% if log.status == "sucesso" %>
                <span class="badge bg-success rounded-pill px-3 py-2">
                  <i class="fa-solid fa-check me-1"></i> Sucesso
                </span>
              <% else %>
                <span class="badge bg-danger rounded-pill px-3 py-2">
                  <i class="fa-solid fa-triangle-exclamation me-1"></i> Falha
                </span>
              <% end %>
            </td>

            <!-- MENSAGEM -->
            <td><%= truncate(log.mensagem, length: 40) %></td>

            <!-- PRODUTO -->
            <td><%= log.produto.present? ? log.produto : "-" %></td>

            <!-- REMETENTE -->
            <td><%= log.remetente.present? ? log.remetente : "-" %></td>

            <!-- DATA -->
            <td><%= l log.created_at, format: :short %></td>

            <!-- AÇÕES -->
            <td class="text-end">
              <%= link_to logs_processamento_path(log),
                          class: "btn btn-outline-primary btn-sm px-2 py-1" do %>
                <i class="fa-solid fa-eye"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
